<!--search.wxml-->
<view class="page">
  <form>
    <view class="page__bd">
        <view class="weui-cells__title">请输入关键字</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">关键字</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" placeholder="请输入课程关键字" type="text"  bindinput="Change" value="{{keyword}}" auto-focus/>
                </view>
            </view>
            
        </view>

        <view class="weui-btn-area">
            <button class="weui-btn" type="primary" bindtap="search">搜索</button>
        </view>
    </view>
  </form>
</view>